<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_light"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- Review Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- User Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageUserAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:background="@color/primary_color_lighter" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- User Rating -->
        <LinearLayout
            android:id="@+id/layoutUserRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ratingStar1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_star_border"
                app:tint="@color/warning_color" />

            <ImageView
                android:id="@+id/ratingStar2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_star_border"
                app:tint="@color/warning_color" />

            <ImageView
                android:id="@+id/ratingStar3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_star_border"
                app:tint="@color/warning_color" />

            <ImageView
                android:id="@+id/ratingStar4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_star_border"
                app:tint="@color/warning_color" />

            <ImageView
                android:id="@+id/ratingStar5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star_border"
                app:tint="@color/warning_color" />

            <TextView
                android:id="@+id/textRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.5"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Review Content -->
    <TextView
        android:id="@+id/textReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excellent book! The concepts are explained clearly and the examples are very practical. I would definitely recommend this to anyone looking to improve their coding skills."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginBottom="8dp" />

    <!-- Review Actions -->
    

</LinearLayout>
